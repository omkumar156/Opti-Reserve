<!doctype html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Forgot Password | Opti-Reserve</title>

  <!-- Favicon -->
  <link rel="shortcut icon" href="/assets/admin/assets/images/favicon.png" />

  <!-- Themify icons -->
  <link rel="stylesheet" href="/assets/admin/dist/icons/themify-icons/themify-icons.css" type="text/css">

  <!-- Main style file -->
  <link rel="stylesheet" href="/assets/admin/dist/css/app.min.css" type="text/css">

  <style>
    body {
      background-color: #c5c5c5 !important;
    }

    .card {
      background-color: black !important;
      border-radius: 15px;
      padding: 30px;
      color: white;
    }

    .btn-primary {
      background-color: #0d41eb !important;
      border: none !important;
    }

    input:focus, textarea:focus, select:focus, button:focus {
      outline: none !important;
      border-color: #DBB778 !important;
      box-shadow: 0 0 0 0.2rem rgba(219, 183, 120, 0.25) !important;
    }

    #main_logo {
      font-family: 'Inter', sans-serif;
      font-weight: 700;
      font-size: 2.5rem;
      color: white;
      text-shadow: 2px 2px 10px rgba(0, 153, 255, 0.5);
      border-bottom: 3px solid #00bfff;
      display: inline-block;
      padding-bottom: 5px;
    }

    a {
      color: #00bfff;
      text-decoration: none;
    }

    a:hover {
      text-decoration: underline;
    }
  </style>
</head>

<body class="auth">

  <div class="form-wrapper">
    <div class="container">
      <div class="text-uppercase text-dark text-center my-1" style="font-weight: 800; font-size:24px">
        Welcome to Opti-Reserve
      </div>

      <div class="card text-white">
        <div class="row g-0">
          <div class="col register">
            <div class="row">
              <div class="col-md-10 offset-md-1">

                <div class="d-flex justify-content-center mb-4">
                  <h1 id="main_logo">Opti-<span style="color:#00bfff;">Reserve</span></h1>
                </div>

                <div class="text-center mb-4">
                  <h1 class="display-8">Forgot Password</h1>
                  <p class="text-white">Verify your account using Email and Date of Birth</p>
                </div>

                <% if (error && error.length > 0) { %>
                  <div class="alert alert-danger"><%= error %></div>
                <% } %>
                <% if (success && success.length > 0) { %>
                  <div class="alert alert-success"><%= success %></div>
                <% } %>

                <form method="POST" action="/forgot-password" class="mb-4">

                  <div class="mb-3">
                    <label for="email" class="form-label">Email Address</label>
                    <input
                      type="email"
                      id="email"
                      name="email"
                      class="form-control"
                      placeholder="Enter your registered email"
                      required
                    />
                  </div>

                  <div class="mb-3">
                    <label for="dob" class="form-label">Date of Birth</label>
                    <input
                      type="date"
                      id="dob"
                      name="dob"
                      class="form-control"
                      required
                    />
                  </div>

                  <div class="text-center text-lg-start">
                    <button type="submit" class="btn btn-primary w-100 py-2">Verify</button>
                  </div>
                </form>

                <p class="text-center mt-3 mb-0">
                  Remembered your password?
                  <a href="<%= route('login.show') %>">Login here</a>
                </p>

              </div>
            </div>
          </div>
        </div>
      </div>

    </div>
  </div>

  <!-- Scripts -->
  <script src="/assets/admin/libs/bundle.js"></script>
  <script src="/assets/admin/js/app.min.js"></script>
</body>
</html>
