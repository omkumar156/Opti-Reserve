<!doctype html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Reset Password | Opti-Reserve</title>

  <!-- Favicon -->
  <link rel="shortcut icon" href="/assets/admin/assets/images/favicon.png" />

  <!-- Themify icons -->
  <link rel="stylesheet" href="/assets/admin/dist/icons/themify-icons/themify-icons.css" type="text/css">

  <!-- Main style file -->
  <link rel="stylesheet" href="/assets/admin/dist/css/app.min.css" type="text/css">

  <style>
    body {
      background-color: #c5c5c5 !important;
    }

    .card {
      background-color: black !important;
      border-radius: 15px;
      padding: 30px;
      color: white;
    }

    .btn-primary {
      background-color: #0d41eb !important;
      border: none !important;
    }

    input:focus, textarea:focus, select:focus, button:focus {
      outline: none !important;
      border-color: #DBB778 !important;
      box-shadow: 0 0 0 0.2rem rgba(219, 183, 120, 0.25) !important;
      color: white !important;
    }

    label {
      color: #fff;
      font-weight: 500;
    }

    .form-control {
      background-color: #1c1c1c;
      color: #fff;
      border: 1px solid #333;
    }

    .form-control::placeholder {
      color: #aaa;
    }

    .form-control:focus {
      background-color: #1c1c1c;
    }

    #main_logo {
      font-family: 'Inter', sans-serif;
      font-weight: 700;
      font-size: 2.5rem;
      color: white;
      text-shadow: 2px 2px 10px rgba(0, 153, 255, 0.5);
      border-bottom: 3px solid #00bfff;
      display: inline-block;
      padding-bottom: 5px;
    }

    a {
      color: #00bfff;
      text-decoration: none;
    }

    a:hover {
      text-decoration: underline;
    }

    .password-toggle {
      position: absolute;
      right: 15px;
      top: 38px;
      cursor: pointer;
      background: none;
      border: none;
      outline: none;
      color: #ccc;
    }
  </style>
</head>

<body class="auth">

  <div class="form-wrapper">
    <div class="container">
      <div class="text-uppercase text-dark text-center my-1" style="font-weight: 800; font-size:24px">
        Welcome to Opti-Reserve
      </div>

      <div class="card text-white">
        <div class="row g-0">
          <div class="col reset">
            <div class="row">
              <div class="col-md-10 offset-md-1">

                <div class="d-flex justify-content-center mb-4">
                  <h1 id="main_logo">Opti-<span style="color:#00bfff;">Reserve</span></h1>
                </div>

                <div class="text-center mb-4">
                  <h1 class="display-8">Reset Your Password</h1>
                  <p class="text-white">Enter and confirm your new password</p>
                </div>

                <% if (error && error.length > 0) { %>
                  <div class="alert alert-danger"><%= error %></div>
                <% } %>
                <% if (success && success.length > 0) { %>
                  <div class="alert alert-success"><%= success %></div>
                <% } %>

                <form method="POST" action="<%= route('reset.password.submit') %>" class="mb-4">

                  <!-- New Password -->
                  <div class="mb-3 position-relative">
                    <label for="new_password" class="form-label">New Password</label>
                    <input
                      type="password"
                      id="new_password"
                      name="new_password"
                      class="form-control"
                      placeholder="Enter new password"
                      required
                    />
                    <button type="button" class="password-toggle" onclick="togglePassword('new_password', 'eyeIcon1')">
                      <svg id="eyeIcon1" xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="white" viewBox="0 0 16 16">
                        <path d="M16 8s-3-5.5-8-5.5S0 8 0 8s3 5.5 
                                 8 5.5S16 8 16 8zM8 13c-2.5 0-4-2-4-5s1.5-5 
                                 4-5 4 2 4 5-1.5 5-4 5z"/>
                        <path d="M8 5.5a2.5 2.5 0 1 0 0 5 
                                 2.5 2.5 0 0 0 0-5z"/>
                      </svg>
                    </button>
                  </div>

                  <!-- Confirm Password -->
                  <div class="mb-3 position-relative">
                    <label for="confirm_password" class="form-label">Confirm Password</label>
                    <input
                      type="password"
                      id="confirm_password"
                      name="confirm_password"
                      class="form-control"
                      placeholder="Confirm new password"
                      required
                    />
                    <button type="button" class="password-toggle" onclick="togglePassword('confirm_password', 'eyeIcon2')">
                      <svg id="eyeIcon2" xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="white" viewBox="0 0 16 16">
                        <path d="M16 8s-3-5.5-8-5.5S0 8 0 8s3 5.5 
                                 8 5.5S16 8 16 8zM8 13c-2.5 0-4-2-4-5s1.5-5 
                                 4-5 4 2 4 5-1.5 5-4 5z"/>
                        <path d="M8 5.5a2.5 2.5 0 1 0 0 5 
                                 2.5 2.5 0 0 0 0-5z"/>
                      </svg>
                    </button>
                  </div>

                  <div class="text-center text-lg-start">
                    <button type="submit" class="btn btn-primary w-100 py-2">Update Password</button>
                  </div>
                </form>

                <p class="text-center mt-3 mb-0">
                  <a href="<%= route('login.show') %>">Back to Login</a>
                </p>

              </div>
            </div>
          </div>
        </div>
      </div>

    </div>
  </div>

  <!-- Scripts -->
  <script>
    // âœ… Reusable function for toggling password visibility
    function togglePassword(inputId, iconId) {
      const input = document.getElementById(inputId);
      const icon = document.getElementById(iconId);
      const isPassword = input.getAttribute("type") === "password";
      input.setAttribute("type", isPassword ? "text" : "password");
      icon.style.opacity = isPassword ? "0.5" : "1";
    }
  </script>

  <script src="/assets/admin/libs/bundle.js"></script>
  <script src="/assets/admin/js/app.min.js"></script>
</body>
</html>
