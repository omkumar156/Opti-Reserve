<!doctype html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <title>Register | Opti-Reserve</title>

  <!-- Favicon -->
  <link rel="shortcut icon" href="/assets/admin/assets/images/favicon.png" />

  <!-- Themify icons -->
  <link rel="stylesheet" href="/assets/admin/dist/icons/themify-icons/themify-icons.css" type="text/css">

  <!-- Main style file -->
  <link rel="stylesheet" href="/assets/admin/dist/css/app.min.css" type="text/css">

  <style>
    body {
      background-color: #c5c5c5 !important;
    }

    .btn-primary {
      background-color: #0d41eb !important;
      border: none !important;
    }

    input:focus, textarea:focus, select:focus, button:focus {
      outline: none !important;
      border-color: #DBB778 !important;
      box-shadow: 0 0 0 0.2rem rgba(219, 183, 120, 0.25) !important;
      color: white !important;
    }

    .card {
      background-color: black !important;
      border-radius: 15px;
      padding: 30px;
      color: white;
    }

    label {
      color: #fff;
      font-weight: 500;
    }

    .form-control {
      background-color: #1c1c1c;
      color: #fff;
      border: 1px solid #333;
    }

    .form-control::placeholder {
      color: #aaa;
    }

    .form-control:focus {
      background-color: #1c1c1c;
    }

    a {
      color: #00bfff;
      text-decoration: none;
    }

    a:hover {
      text-decoration: underline;
    }

    #main_logo {
      font-family: 'Inter', sans-serif;
      font-weight: 700;
      font-size: 2.5rem;
      color: white;
      text-shadow: 2px 2px 10px rgba(0, 153, 255, 0.5);
      border-bottom: 3px solid #00bfff;
      display: inline-block;
      padding-bottom: 5px;
    }
  </style>
</head>

<body class="auth">

  <div class="form-wrapper">
    <div class="container">
      <div class="text-uppercase text-dark text-center my-1" style="font-weight: 800; font-size:24px">
        Welcome to Opti-Reserve
      </div>

      <div class="card text-white">
        <div class="row g-0">
          <div class="col register">
            <div class="row">
              <div class="col-md-10 offset-md-1">

                <div class="d-flex justify-content-center mb-4">
                  <h1 id="main_logo">Opti-<span style="color:#00bfff;">Reserve</span></h1>
                </div>

                <div class="text-center mb-4">
                  <h1 class="display-8">Create an Account</h1>
                  <p class="text-white">Join us and start reserving smarter</p>
                </div>

                <% if (error && error.length > 0) { %>
                  <div class="alert alert-danger"><%= error %></div>
                <% } %>
                <% if (success && success.length > 0) { %>
                  <div class="alert alert-success"><%= success %></div>
                <% } %>

                <form method="POST" action="<%= route('register.submit') %>" class="mb-4">

                  <div class="mb-3">
                    <label for="name" class="form-label">Full Name</label>
                    <input
                      type="text"
                      id="name"
                      name="name"
                      class="form-control"
                      placeholder="Enter your full name"
                      required
                    />
                  </div>

                  <div class="mb-3">
                    <label for="email" class="form-label">Email Address</label>
                    <input
                      type="email"
                      id="email"
                      name="email"
                      class="form-control"
                      placeholder="Enter your email"
                      required
                    />
                  </div>
                    <div class="mb-3">
    <label for="dob" class="form-label">Date of Birth</label>
    <input id="dob" class="form-control" type="date" name="dob"
      required placeholder="Enter your Date of Birth">
  </div


               <div class="mb-3 position-relative">
                      <label for="password" class="form-label">Password</label>

                      <div class="input-group">
                        <input
                          id="password"
                          class="form-control"
                          type="password"
                          name="password"
                          required
                          autocomplete="current-password"
                          placeholder="Enter password"
                        />

                        <button
                          type="button"
                          class="btn btn-outline-secondary"
                          id="togglePassword"
                          style="border-color: #333; background-color: #1c1c1c"
                        >
                          <!-- ðŸ‘ SVG Eye Icon -->
                          <svg
                            id="eyeIcon"
                            xmlns="http://www.w3.org/2000/svg"
                            width="20"
                            height="20"
                            fill="white"
                            viewBox="0 0 16 16"
                          >
                            <path
                              d="M16 8s-3-5.5-8-5.5S0 8 0 8s3 5.5 
                 8 5.5S16 8 16 8zM8 13c-2.5 0-4-2-4-5s1.5-5 
                 4-5 4 2 4 5-1.5 5-4 5z"
                            />
                            <path
                              d="M8 5.5a2.5 2.5 0 1 0 0 5 
                 2.5 2.5 0 0 0 0-5z"
                            />
                          </svg>
                        </button>
                      </div>
                    </div>


                  <div class="text-center text-lg-start">
                    <button type="submit" class="btn btn-primary w-100 py-2">Register</button>
                  </div>
                </form>

                <p class="text-center mt-3 mb-0">
                  Already have an account?
                  <a href="<%= route('login.show') %>">Login here</a>
                </p>

              </div>
            </div>
          </div>
        </div>
      </div>

    </div>
  </div>

     <script>
      //  Password visibility toggle
      const togglePassword = document.querySelector("#togglePassword");
      const passwordInput = document.querySelector("#password");
      const eyeIcon = document.querySelector("#eyeIcon");

      togglePassword.addEventListener("click", () => {
        const type =
          passwordInput.getAttribute("type") === "password"
            ? "text"
            : "password";
        passwordInput.setAttribute("type", type);

        // Toggle eye icon color or style
        eyeIcon.style.opacity = type === "text" ? "0.5" : "1";
      });
    </script>



  <!-- Scripts -->
  <script src="/assets/admin/libs/bundle.js"></script>
  <script src="/assets/admin/js/app.min.js"></script>
</body>
</html>
