    <!-- Phone Input Script -->
    <script>
        $(document).ready(function () {
            const defaultCountry = "ae";
            const input = document.querySelector("#ContentPlaceHolder1_txtphone");
            if(input){
                const iti = window.intlTelInput(input, {
                    utilsScript: "https://cdn.jsdelivr.net/npm/intl-tel-input@18.2.1/build/js/utils.js",
                    initialCountry: defaultCountry
                });

                function logSelectedCountry() {
                    const selectedDialCode = '+' + iti.getSelectedCountryData().dialCode;
                    $('.phone').val(selectedDialCode);
                }

                logSelectedCountry();
                input.addEventListener('countrychange', logSelectedCountry);

                $(document).on('keydown', '.phone', function (e) {
                    const inputValue = $('.phone').val();
                    if(inputValue === '+' + iti.getSelectedCountryData().dialCode && e.keyCode == 8){
                        e.preventDefault();
                    }
                });
            }
        });
    </script>

    <!-- Mobile Font Adjustment -->
    <script>
        function removeFontSizeClassForMobile() {
            if(window.innerWidth <= 768){
                document.querySelectorAll('.my_card_title.font-size').forEach(el => {
                    el.classList.remove('font-size');
                    el.classList.add('font-size-mobile');
                });
            }
        }
        removeFontSizeClassForMobile();
        window.addEventListener('resize', removeFontSizeClassForMobile);
    </script>

