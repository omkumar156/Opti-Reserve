<style>
  /* General Styles */
  body {
    overflow-x: hidden;
    margin: 0;
    padding: 0;
    width: 100%;
  }
  .top-bar .container {
    padding: 0;
    max-width: 100%;
  }
  .top-bar .d-flex a {
    color: #d4b170;
    font-family: "Open Sans", sans-serif !important;
    font-size: 14px;
  }
  .top-bar {
    margin: 0 !important;
    padding: 0 !important;
  }
  .navbar-brand {
    margin: 0 auto;
  }
  .navbar-toggler {
    margin-left: auto;
  }
  .nav-link {
    margin: 10px;
  }
  .nav-item a:hover {
    transform: scale(1.1);
    transition: transform 0.3s ease;
  }
  .footer-links a:hover {
    color: #dbb778 !important;
  }
  .custom-confirm-button {
    background-color: #dbb778 !important;
    color: #fff;
  }
  .activee a {
    color: #d4b170 !important;
  }
  .font-size {
    font-size: 2vw;
  }
  .border-r-top {
    border-top-left-radius: 5px !important;
    border-top-right-radius: 5px !important;
    border: none !important;
  }
  .border-r-down {
    border-bottom-left-radius: 5px !important;
    border-bottom-right-radius: 5px !important;
    border: none;
  }
  .card {
    background-color: transparent;
  }
  #main_logo {
    margin-right: 417px !important;
    margin-top: 10px !important;
  }

  /* Mobile Header */
  .desktop-header {
    display: none;
  }
  .mobile-header {
    display: block;
  }

  /* Media Queries */
  @media (max-width: 767px) {
    .navbar-brand {
      margin-top: 5px;
    }
    .nav-item {
      margin-bottom: 2px;
    }
    #about-section {
      transform: translate(0, -30px);
    }
    .font-size {
      font-size: 2.3vw;
    }
  }

  @media (min-width: 986px) {
    .desktop-header {
      display: block;
    }
    .mobile-header {
      display: none;
    }
    #nav-logo {
      position: absolute;
      left: 50%;
      top: 5px;
      transform: translate(-50%);
    }
    .custom-border {
      margin-top: 20px;
    }
  }

  .navbar-toggler {
    font-size: 1.5rem;
    border: none;
  }
  .navbar-toggler-icon {
    width: 1.75em;
    height: 1.75em;
    background-size: 100%;
  }
  .home-search-filter {
    position: relative;
    background: black;
    margin-bottom: 20px;
  }
</style>

<!-- Mobile Header -->
<div class="top-bar mobile-header">
  <div class="container">
    <div class="d-flex justify-content-center align-items-center pt-3">
      <div class="d-flex">
        <a
          href="https://www.google.com/maps"
          class="text-decoration-none text-light"
        >
          <img
            width="25"
            src="/assets/User/icons/location.png"
            alt="Location Icon"
          />
          &nbsp; Visit Us
        </a>
      </div>
      &nbsp;&nbsp;&nbsp;&nbsp;
      <div class="d-flex">
        <a href="tel:+971503856969" class="text-decoration-none text-light">
          <img width="25" src="/assets/User/icons/phone.png" alt="Phone Icon" />
          &nbsp; Contact Us
        </a>
      </div>
    </div>

    <nav class="navbar navbar-expand-md navbar-dark bg-dark">
      <div
        class="container-fluid d-flex justify-content-between align-items-center"
        style="padding: 0 0 20px 0"
      >
        <div class="navbar-logo mx-3">
          <a class="navbar-brand" href="/">
            <img src="/assets/User/logo/Logo.png" width="150" alt="logo" />
          </a>
        </div>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarNavMobile"
        >
          <span class="navbar-toggler-icon p-3"></span>
        </button>
        <div
          class="collapse navbar-collapse justify-content-center"
          id="navbarNavMobile"
        >
          <ul class="navbar-nav">
            <li class="nav-item"><a class="nav-link" href="/">Home</a></li>
            <li class="nav-item">
              <a class="nav-link" href="/about">About Us</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/inventories">Services</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/contact">Contact</a>
            </li>
          </ul>
        </div>
      </div>
    </nav>
  </div>
</div>

<!-- Desktop Header -->
<div class="top-bar desktop-header">
  <div class="container">
    <nav class="navbar navbar-expand-md navbar-dark bg-dark">
      <div class="container-fluid">
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarNavDesktop"
        >
          <span class="navbar-toggler-icon"></span>
        </button>

        <div
          class="collapse navbar-collapse d-flex justify-content-between align-items-center"
          id="navbarNavDesktop"
        >
          <!-- Left Menu -->
          <ul class="navbar-nav">
            <li class="nav-item">
              <a class="nav-link" href="/welcome">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/about">About Us</a>
            </li>
            <li class="nav-item dropdown">
              <a
                class="nav-link dropdown-toggle"
                href="#"
                id="navbarDropdown"
                data-bs-toggle="dropdown"
              >
                Resource Categories
              </a>
              <ul
                class="dropdown-menu bg-dark border-0"
                aria-labelledby="navbarDropdown"
              >
                <% if (categories && categories.length) { %> <%
                categories.forEach(cat => { %>
                <li>
                  <a
                    class="dropdown-item text-white"
                    href="/user/resources?filter=<%= cat.id %>"
                  >
                    <%= cat.name %>
                  </a>
                </li>
                <% }) %> <% } else { %>
                <li>
                  <a class="dropdown-item text-muted" href="#">No categories</a>
                </li>
                <% } %>
              </ul>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/user/resources">Resources</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/inventory?filter=photography"
                >Bookings</a
              >
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/contact">Contact</a>
            </li>
          </ul>

          <!-- Center Logo -->
          <div class="navbar-brand mx-auto">
            <a href="/">
              <h1
                id="main_logo"
                style="
                  font-family: 'Inter', sans-serif;
                  font-weight: 700;
                  font-size: 2.3rem;
                  color: white;
                  text-shadow: 2px 2px 10px rgba(0, 153, 255, 0.5);
                  border-bottom: 3px solid #00bfff;
                  display: inline-block;
                  padding-bottom: 5px;
                "
              >
                Opti-<span style="color: #00bfff">Reserve</span>
              </h1>
            </a>
          </div>

          <!-- Right: Profile Dropdown -->
          <ul class="navbar-nav align-items-center">
            <% if (user) { %>
            <li class="nav-item dropdown">
              <a
                class="nav-link dropdown-toggle text-white fw-bold"
                href="#"
                id="profileDropdown"
                role="button"
                data-bs-toggle="dropdown"
                aria-expanded="false"
              >
                <%= user.name %>
              </a>
              <ul
                class="dropdown-menu dropdown-menu-end"
                aria-labelledby="profileDropdown"
              >
                <li><a class="dropdown-item" href="/profile">My Profile</a></li>
                <li><hr class="dropdown-divider" /></li>
                <li>
                  <a class="dropdown-item text-danger" href="/logout">Logout</a>
                </li>
              </ul>
            </li>
            <% } else { %>
            <li class="nav-item">
              <a class="nav-link text-white fw-bold" href="/login">Login</a>
            </li>
            <% } %>
          </ul>
        </div>
      </div>
    </nav>
  </div>
</div>

<script>
  function removeClassesForTablets() {
    var navbarNavMobile = document.getElementById("navbarNavMobile");
    if (window.innerWidth >= 768 && window.innerWidth <= 1024) {
      navbarNavMobile.classList.remove(
        "collapse",
        "navbar-collapse",
        "justify-content-center"
      );
      navbarNavMobile.classList.add("mx-3");
    }
  }
  removeClassesForTablets();
  window.addEventListener("resize", removeClassesForTablets);
</script>
